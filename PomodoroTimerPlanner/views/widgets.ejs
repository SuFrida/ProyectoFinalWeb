<%- include ("./templates/_header") %>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <div class="brand-logo">
                <a href="/">
                    <b class="logo-abbr"><img src="images/logo.png" alt=""> </b>
                    <span class="logo-compact"><img src="./images/logo-compact.png" alt=""></span>
                    <span class="brand-title">
                        <h4> Pomodoro Task Manager </h4>
                    </span>
                </a>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">    
            <div class="header-content clearfix">
                
                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>
                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative"   data-toggle="dropdown">
                                <span class="activity active"></span>
                                <img src="images/user/1.png" height="40" width="40" alt="">
                            </div>
                            <div class="drop-down dropdown-profile animated fadeIn dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            <a href="/form-editor"><i class="icon-user"></i> <span>Tareas</span></a>
                                        </li>
                                        <hr class="my-2">
                                        <li><a href="/logoff"><i class="icon-key"></i> <span>Cerrar Sesión</span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="nk-sidebar">           
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label">Dashboard</li>
                    <li>
                        <a class="" href="/" aria-expanded="false">
                            <i class="icon-speedometer menu-icon"></i><span class="nav-text">Página de inicio</span>
                        </a>
                    </li>
                    <li>
                        <a class="" href="/widgets" aria-expanded="false">
                            <i class="icon-notebook menu-icon"></i><span class="nav-text">Planificador de tareas</span>
                        </a>
                    </li>
                    <li>
                        <a class="" href="/logoff" aria-expanded="false">
                            <i class="icon-note menu-icon"></i><span class="nav-text">Cerrar sesión</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="row page-titles mx-0">
                <div class="col p-md-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Inicio</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Tareas</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->

            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="stat-widget-one timer">
                                <div class="stat-content">
                                    <div class="stat-text button-group mode-button" id="js-mode-buttons">
                                        <button data-mode="pomodoro" class="btn active mode-button btn-outline-primary btn-rounded" id="js-pomodoro">
                                            Pomodoro
                                        </button>
                                        <button data-mode="shortBreak" class="btn mode-button btn-outline-secondary btn-rounded" id="js-short-break">
                                            Short break
                                        </button>
                                        <button data-mode="longBreak" class="btn mode-button btn-outline-secondary btn-rounded" id="js-long-break">
                                            Long break
                                        </button>
                                    </div>
                                    <div class="clock" id="js-clock">
                                        <span id="js-minutes">25</span>
                                        <span class="separator">:</span>
                                        <span id="js-seconds">00</span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button class="btn btn-success main-button btn-rounded" data-action="start" id="js-btn">
                                        Start
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <div class="card-body px-0">
                                <form action="/add" method="POST">
                                    <h4 class="card-title px-4 mb-3">Todo List</h4>
                                    <div class="todo-list">
                                        <div class="tdl-holder">
                                            <div class="tdl-content">
                                                <ul id="todo_list">
                                                    <% for(let i = 0; i<tasks.length; i++) { %>
                                                        <li>
                                                            <label>
                                                                <input type="checkbox" href="/status/<%=tasks[i]._id%>">
                                                                <i></i>
                                                                <span> <%= tasks[i].titulo %> </span><a href="/form-editor/<%=tasks[i]._id%>" class="ti-pencil"></a>
                                                            </label>
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                            <div class="px-4">
                                                <input type="text" name="titulo" class="form-control" placeholder="Write new item and hit 'Enter'...">
                                                <button class="btn btn-primary tdl-new" type="submit" style="margin-top: 1rem;">
                                                    Add
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

